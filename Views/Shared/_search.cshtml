@using System.Data;

<div class="row>
<div class="panel col-sx-12" >
	<div class="panel-heading text-center">
		 <h6>@ViewBag.tableheading</h6>
	</div>
	
          <button type="button" class="close" data-dismiss="modal">&times;</button>
       
        <div class="modal-body"  style="overflow-y:scroll;width:100%;height:200px;">
	<div class="panel-body" >
		<div class="table-responsive" style="height:400px;">
		<table  class="table table-bordered table-condensed"  id="tblvoucher_master">
			<thead> <!-- ;$html.= count($headings); -->
				<tr class="h6">
					@for (int i = 0; i < @Model.Tables[0].Columns.Count; i++)
     {
						<td>@Model.Tables[0].Columns[i].ColumnName</td>
     } 
					
                </tr>
			</thead>
			<tbody>
				
					@for (var i = 0; i < Model.Tables[0].Rows.Count; i++)
                    {
						<tr>
						@for (int j = 0; j < Model.Tables[0].Columns.Count; j++)
                        {
                            if (j ==6) { 
                                <td><input type="checkbox" value="@Model.Tables[0].Rows[i].ItemArray[j]" /></td>
                            }
                            else if (j == 8)
                              {
							        <td class="classname">@String.Format("{0:dd/MM/yyyy}", Model.Tables[0].Rows[i].ItemArray[j]) </td>
                              }
                              else if(j==4) {
                                    <td class="classname" ><input type="text" name="txtpamt" id="txtpamt" value="@Model.Tables[0].Rows[i].ItemArray[j]" /></td>
                              }
                              else
                              { 
                                    <td class="classname"> @Model.Tables[0].Rows[i].ItemArray[j]</td>
                              }
                        }
						
						
						</tr>
     }
			</tbody>
			
		</table>
		</div>
        </div>
            <div class="modal-footer">
                
            </div>
        </div>
	</div> 
